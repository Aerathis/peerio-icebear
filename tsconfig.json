{
  "compilerOptions": {
    "target": "esnext",
    "experimentalDecorators": true,
    "allowJs": false,
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false, // TODO: enable (default enabled under `strict`, so just remove this line)
    "strictNullChecks": false, // TODO: enable (default enabled under `strict`, so just remove this line)
    "lib": ["dom", "esnext"],
    "baseUrl": "."
  },
  "include": ["src/**/*"]
}
