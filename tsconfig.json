{
  "compilerOptions": {
    "target": "esnext",
    "experimentalDecorators": true,
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false, // TODO: enable (default enabled under `strict`, so just remove this line)
    "strictNullChecks": false, // TODO: enable (default enabled under `strict`, so just remove this line)
    "lib": ["dom", "esnext"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "test/**/*"]
}
