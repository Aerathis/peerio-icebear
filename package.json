{
  "name": "peerio-icebear",
  "version": "1.0.0",
  "description": "Peerio Icebear client library",
  "main": "src/icebear.js",
  "scripts": {
    "test": "BABEL_ENV=coverage karma start",
    "check-coverage": "istanbul check-coverage --statements 23 --branches 5 --functions 9 --lines 24",
    "validate": "npm-run-all --parallel lint flow test --serial check-coverage",
    "start": "karma start --no-single-run",
    "build": "webpack --progress",
    "lint": "eslint . --fix --ext .js,.jsx",
    "flow": "flow check",
    "flow:coverage": "for n in src/**/*.js; do echo \"$n\"; flow coverage \"$n\"; done",
    "flow:suggest": "flow suggest src/**/*.js",
    "release": "standard-version && git push --follow-tags origin master",
    "doc:serve": "documentation serve -w src/**",
    "doc:lint": "documentation lint src/**",
    "doc:build": "documentation build src/** -f md -o API.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PeerioTechnologies/peerio-icebear.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/PeerioTechnologies/peerio-icebear/issues"
  },
  "homepage": "https://github.com/PeerioTechnologies/peerio-icebear#readme",
  "dependencies": {
    "blake2s-js": "1.2.0",
    "bluebird": "3.4.6",
    "buffer": "4.9.1",
    "is_js": "0.8.0",
    "mobx": "2.5.1",
    "mobx-react": "3.5.5",
    "nacl-stream": "0.3.3",
    "scrypt-async": "1.2.0",
    "socket.io-client": "1.4.8",
    "tweetnacl": "0.14.3"
  },
  "devDependencies": {
    "babel-core": "6.14.0",
    "babel-eslint": "6.1.2",
    "babel-loader": "6.2.5",
    "babel-plugin-__coverage__": "11.0.0",
    "babel-plugin-transform-decorators-legacy": "1.3.4",
    "babel-plugin-transform-es2015-template-literals": "6.8.0",
    "babel-preset-es2015": "6.14.0",
    "babel-preset-react": "6.11.1",
    "babel-preset-stage-0": "6.5.0",
    "chai": "3.5.0",
    "cz-conventional-changelog": "1.2.0",
    "documentation": "4.0.0-beta10",
    "eslint-config-peerio": "*",
    "eslint-loader": "1.5.0",
    "file-loader": "0.9.0",
    "flow-bin": "0.31.1",
    "flow-status-webpack-plugin": "0.1.6",
    "ghooks": "1.3.2",
    "iflow-bluebird": "1.1.18",
    "istanbul": "0.4.5",
    "json-loader": "0.5.4",
    "karma": "1.2.0",
    "karma-chai": "0.1.0",
    "karma-chrome-launcher": "2.0.0",
    "karma-coverage": "1.1.1",
    "karma-firefox-launcher": "1.0.0",
    "karma-mocha": "1.1.1",
    "karma-nyan-reporter": "0.2.4",
    "karma-sourcemap-loader": "0.3.7",
    "karma-webpack": "1.8.0",
    "mocha": "3.0.2",
    "npm-run-all": "3.1.0",
    "rimraf": "2.5.4",
    "standard-version": "^2.4.0",
    "validate-commit-msg": "2.8.0",
    "webpack": "2.1.0-beta.21"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run doc:build && git add API.md",
      "pre-push": "npm run validate",
      "post-checkout": "npm update",
      "post-merge": "npm update",
      "commit-msg": "validate-commit-msg"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "helpMessage": "Convention: https://goo.gl/3TgTsh"
    }
  },
  "devEngines": {
    "node": "5.x",
    "npm": "3.x"
  }
}
