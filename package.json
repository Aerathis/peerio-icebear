{
  "name": "peerio-icebear",
  "version": "1.0.0",
  "description": "Peerio Icebear client library",
  "main": "src/icebear.js",
  "scripts": {
    "test": "karma start",
    "check-coverage": "istanbul check-coverage --statements 23 --branches 5 --functions 9 --lines 24",
    "validate": "npm-run-all --parallel validate-webpack lint test --serial check-coverage",
    "validate-webpack": "webpack-validator webpack.config.js --env.test",
    "start": "npm test -- --auto-watch --no-single-run",
    "build": "webpack --env.test --progress",
    "lint": "eslint . --fix --ext .js,.jsx",
    "flow": "flow check",
    "release": "standard-version && git push --follow-tags origin master"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PeerioTechnologies/peerio-icebear.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/PeerioTechnologies/peerio-icebear/issues"
  },
  "homepage": "https://github.com/PeerioTechnologies/peerio-icebear#readme",
  "dependencies": {
    "blake2s-js": "1.2.0",
    "bluebird": "3.4.1",
    "is_js": "0.8.0",
    "nacl-stream": "0.3.3",
    "scrypt-async": "1.2.0",
    "tweetnacl": "0.14.3",
    "tweetnacl-util": "0.13.3"
  },
  "devDependencies": {
    "babel-core": "6.13.2",
    "babel-loader": "6.2.5",
    "babel-plugin-__coverage__": "11.0.0",
    "babel-plugin-transform-flow-strip-types": "6.8.0",
    "babel-preset-es2015": "6.13.2",
    "chai": "3.5.0",
    "cz-conventional-changelog": "1.2.0",
    "eslint-config-peerio": "*",
    "eslint-loader": "1.5.0",
    "file-loader": "0.9.0",
    "flow-bin": "0.30.0",
    "flow-status-webpack-plugin": "0.1.6",
    "ghooks": "1.3.2",
    "istanbul": "0.4.4",
    "json-loader": "0.5.4",
    "karma": "1.2.0",
    "karma-chai": "0.1.0",
    "karma-chrome-launcher": "2.0.0",
    "karma-coverage": "1.1.1",
    "karma-firefox-launcher": "1.0.0",
    "karma-mocha": "1.1.1",
    "karma-nyan-reporter": "0.2.4",
    "karma-webpack": "1.8.0",
    "mocha": "3.0.2",
    "npm-run-all": "3.0.0",
    "rimraf": "2.5.4",
    "standard-version": "^2.4.0",
    "style-loader": "0.13.1",
    "validate-commit-msg": "2.7.0",
    "webpack": "2.1.0-beta.20",
    "webpack-dev-server": "2.1.0-beta.0",
    "webpack-validator": "2.2.7"
  },
  "config": {
    "ghooks": {
      "pre-push": "npm run validate",
      "post-checkout": "npm update",
      "post-merge": "npm update",
      "commit-msg": "validate-commit-msg"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "helpMessage": "Convention: https://goo.gl/3TgTsh"
    }
  },
  "devEngines": {
    "node": "5.x",
    "npm": "3.x"
  }
}
